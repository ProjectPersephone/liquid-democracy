<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

	<changeSet id="1" author="viniciusrdacosta">
		<createTable tableName="users">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="email" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="password" type="varchar(100)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>


	<changeSet id="2" author="cristianpietro">
		<createTable tableName="citizen">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(100)">
				<constraints nullable="false" />
			</column>
			<column name="cpf" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="voterRegistration" type="varchar(20)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="3" author="diegogualtieri">
		<createTable tableName="area">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(100)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="4" author="diegogualtieri">
		<createTable tableName="project">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="code" type="varchar(10)">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(60)">
				<constraints nullable="false" />
			</column>
			<column name="author" type="varchar(60)">
				<constraints nullable="false" />
			</column>
			<column name="addate" type="date">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="endate" type="date">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="5" author="viniciusrdacosta">
		<createSequence cycle="true" incrementBy="1" maxValue="100000"
			minValue="1" schemaName="public" sequenceName="hibernate_sequence"
			startValue="1" />
	</changeSet>
	
	<changeSet id="6" author="centeno">
		<dropTable tableName="citizen" cascadeConstraints="true" />	
		<createTable tableName="citizen">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="candidate" type="boolean">
				<constraints nullable="false" />
			</column>
			<column name="cpf" type="varchar(14)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<createTable tableName="organization">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<createTable tableName="organization_members">
			<column name="organization_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="members_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint constraintName="fk_om_organization"
			baseTableName="organization_members"
			baseColumnNames="organization_id"
            referencedTableName="organization"
            referencedColumnNames="id" />
		<addForeignKeyConstraint constraintName="fk_om_members"
			baseTableName="organization_members"
			baseColumnNames="members_id"
            referencedTableName="citizen"
            referencedColumnNames="id" />
	</changeSet>
</databaseChangeLog>